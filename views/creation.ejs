<%- include("partials/createheader.ejs") %>
<div class="container">
  <h1 class="title">Compose a New Post</h1>

  <form action="/created" method="POST" class="compose-form">
    <div class="form-group">
      <label for="postTitle">Title</label>
      <input type="text" id="postTitle" name="postTitle" required />
    </div>

    <div class="form-group">
      <label for="postBody">Content</label>
      <textarea id="postBody" name="postBody" rows="10" required></textarea>
    </div>

    <button type="submit" class="submit-btn">Publish</button>
  </form>
</div>

